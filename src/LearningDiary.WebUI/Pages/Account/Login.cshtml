@page
@model LearningDiary.WebUI.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <form method="post" class="form-horizontal">

        @if (!ModelState.IsValid)
        { 
            <div class="col-md-offset-2 col-md-10">
                <h3 class="text-danger">Validation Errors</h3>
                <div asp-validation-summary="All"></div>
                <hr />
            </div>
        }

        <div class="form-group">
            <label asp-for="Nickname" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="Nickname" class="form-control" placeholder="nickname" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Enter</button>
            </div>
        </div>

    </form>
</div>