                <span asp-validation-for="SavePointDetailsVM.Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SavePointDetailsVM.Status" class="control-label"></label>
                <select asp-for="SavePointDetailsVM.Status" asp-items="Html.GetEnumSelectList<SavePointStatus>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="SavePointDetailsVM.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tags" class="control-label"></label>
                <input asp-for="Tags" class="form-control" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="SavePointDetailsVM.Nickname" value="@User.Identity.Name"/>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
