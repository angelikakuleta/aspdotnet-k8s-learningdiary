            </div>
            <div class="form-group">
                <label asp-for="SavePointDetailsVM.Description" class="control-label"></label>
                <input asp-for="SavePointDetailsVM.Description" class="form-control" />
                <span asp-validation-for="SavePointDetailsVM.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SavePointDetailsVM.Type" class="control-label"></label>
                <select asp-for="SavePointDetailsVM.Type" asp-items="Html.GetEnumSelectList<SavePointType>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="SavePointDetailsVM.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SavePointDetailsVM.Link" class="control-label"></label>
