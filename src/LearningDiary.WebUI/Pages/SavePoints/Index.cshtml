@page
@model LearningDiary.WebUI.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>@User.Identity.Name</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SavePointList[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SavePointList[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SavePointList[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SavePointList[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SavePointList[0].Tags)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SavePointList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @foreach (var tag in item.Tags)
                {
                    <span>
                        @Html.DisplayFor(modelTag => tag)
                    </span>
                }
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
